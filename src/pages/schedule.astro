---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Schedule | ${SITE_TITLE}`} description="BRC NIAID AI Codeathon 2025 Schedule" />
		<style>
			main {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
			}
			h1 {
				text-align: center;
				margin-bottom: 0.5em;
			}
			.draft-notice {
				background: #fff3cd;
				border: 1px solid #ffc107;
				border-radius: 4px;
				padding: 1em;
				margin: 2em 0;
				text-align: center;
				font-weight: bold;
			}
			.day {
				margin: 3em 0;
			}
			.day h2 {
				border-bottom: 2px solid rgb(var(--accent));
				padding-bottom: 0.5em;
			}
			.schedule-item {
				display: grid;
				grid-template-columns: 120px 1fr;
				gap: 1em;
				margin: 1em 0;
				padding: 0.75em;
			}
			.schedule-item:hover {
				background: rgba(var(--accent), 0.05);
				border-radius: 4px;
			}
			.time {
				font-weight: bold;
				color: rgb(var(--accent));
			}
			.activity {
				color: rgb(var(--gray-dark));
			}
			.activity-title {
				font-weight: bold;
				margin-bottom: 0.25em;
			}
			.activity-desc {
				font-size: 0.9em;
				color: rgb(var(--gray));
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Codeathon Schedule</h1>

			<div class="draft-notice">
				⚠️ This is a placeholder schedule and will absolutely change
			</div>

			<div class="day">
				<h2>Day 1 - Wednesday, November 12, 2025</h2>

				<div class="schedule-item">
					<div class="time">8:30 AM</div>
					<div class="activity">
						<div class="activity-title">Registration & Coffee</div>
						<div class="activity-desc">Check-in, breakfast, and networking</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:00 AM</div>
					<div class="activity">
						<div class="activity-title">Welcome & Opening Remarks</div>
						<div class="activity-desc">Event overview, goals, and logistics</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:30 AM</div>
					<div class="activity">
						<div class="activity-title">Lightning Talks</div>
						<div class="activity-desc">BRC resources overview, AI/LLM tools, project pitches</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">10:30 AM</div>
					<div class="activity">
						<div class="activity-title">Team Formation</div>
						<div class="activity-desc">Self-organize into teams around project themes</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">11:30 AM</div>
					<div class="activity">
						<div class="activity-title">Hacking Begins!</div>
						<div class="activity-desc">Teams start working on projects</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">12:30 PM</div>
					<div class="activity">
						<div class="activity-title">Lunch</div>
						<div class="activity-desc">Catered lunch provided</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">1:30 PM</div>
					<div class="activity">
						<div class="activity-title">Hacking Session</div>
						<div class="activity-desc">Continue project development</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">3:00 PM</div>
					<div class="activity">
						<div class="activity-title">Afternoon Break</div>
						<div class="activity-desc">Coffee and snacks</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">3:15 PM</div>
					<div class="activity">
						<div class="activity-title">Hacking Session</div>
						<div class="activity-desc">Continue project development</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">4:30 PM</div>
					<div class="activity">
						<div class="activity-title">Daily Standup</div>
						<div class="activity-desc">Quick team updates and blockers</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">5:00 PM</div>
					<div class="activity">
						<div class="activity-title">Day 1 Wrap-up</div>
					</div>
				</div>
			</div>

			<div class="day">
				<h2>Day 2 - Thursday, November 13, 2025</h2>

				<div class="schedule-item">
					<div class="time">8:30 AM</div>
					<div class="activity">
						<div class="activity-title">Coffee & Breakfast</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:00 AM</div>
					<div class="activity">
						<div class="activity-title">Morning Standup</div>
						<div class="activity-desc">Team updates and plans for the day</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:30 AM</div>
					<div class="activity">
						<div class="activity-title">Hacking Session</div>
						<div class="activity-desc">Full day of project development</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">12:30 PM</div>
					<div class="activity">
						<div class="activity-title">Lunch</div>
						<div class="activity-desc">Catered lunch provided</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">1:30 PM</div>
					<div class="activity">
						<div class="activity-title">Hacking Session</div>
						<div class="activity-desc">Continue project development</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">3:00 PM</div>
					<div class="activity">
						<div class="activity-title">Afternoon Break</div>
						<div class="activity-desc">Coffee and snacks</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">3:15 PM</div>
					<div class="activity">
						<div class="activity-title">Hacking Session</div>
						<div class="activity-desc">Continue project development</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">4:30 PM</div>
					<div class="activity">
						<div class="activity-title">Daily Standup</div>
						<div class="activity-desc">Progress check and preparation for demos</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">5:00 PM</div>
					<div class="activity">
						<div class="activity-title">Day 2 Wrap-up</div>
					</div>
				</div>
			</div>

			<div class="day">
				<h2>Day 3 - Friday, November 14, 2025</h2>

				<div class="schedule-item">
					<div class="time">8:30 AM</div>
					<div class="activity">
						<div class="activity-title">Coffee & Breakfast</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:00 AM</div>
					<div class="activity">
						<div class="activity-title">Morning Standup</div>
						<div class="activity-desc">Final day plans and presentation prep</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:30 AM</div>
					<div class="activity">
						<div class="activity-title">Final Hacking Session</div>
						<div class="activity-desc">Finish implementations and prepare presentations</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">12:00 PM</div>
					<div class="activity">
						<div class="activity-title">Lunch</div>
						<div class="activity-desc">Catered lunch provided</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">1:00 PM</div>
					<div class="activity">
						<div class="activity-title">Team Presentations</div>
						<div class="activity-desc">Each team presents their project (10 min + Q&A)</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">3:00 PM</div>
					<div class="activity">
						<div class="activity-title">Closing Remarks</div>
						<div class="activity-desc">Wrap-up, next steps, and acknowledgments</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">3:30 PM</div>
					<div class="activity">
						<div class="activity-title">Reception & Networking</div>
						<div class="activity-desc">Informal discussions and connections</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">4:00 PM</div>
					<div class="activity">
						<div class="activity-title">Event Concludes</div>
					</div>
				</div>
			</div>

			<p style="margin-top: 3em; font-style: italic; color: rgb(var(--gray));">
				<strong>Note:</strong> This is a placeholder schedule and will absolutely change.
				Updates will be posted as the event approaches.
			</p>
		</main>
		<Footer />
	</body>
</html>
